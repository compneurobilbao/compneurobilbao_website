	language = {en},
	number = {10},
	urldate = {2024-04-15},
	journal = {Human Brain Mapping},
	author = {He, Changchun and Cortes, Jesus M. and Kang, Xiaodong and Cao, Jing and Chen, Heng and Guo, Xiaonan and Wang, Ruishi and Kong, Lingyin and Huang, Xinyue and Xiao, Jinming and Shan, Xiaolong and Feng, Rui and Chen, Huafu and Duan, Xujun},
